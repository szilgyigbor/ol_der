<UserControl x:Class="Ol_der.Controls.Products.ModifyProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Products"
             mc:Ignorable="d" 
             FontSize="18"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 20 0 0">
            <TextBlock Text="Termék módosítása"
                FontSize="22"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="0"
                Grid.Column="0"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Cikkszám:" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="itemNumberTextBox" Grid.Row="0" Margin="5" HorizontalAlignment="Center" Width="600"/>

            <Label Content="Megnevezés:" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="nameTextBox" Grid.Row="1" Margin="5" HorizontalAlignment="Center" Width="600"/>

            <Label Content="Beszállító:" Grid.Row="2" VerticalAlignment="Center"/>
            <ComboBox x:Name="suppliersComboBox" Grid.Row="2" Margin="5" HorizontalAlignment="Center" Width="600"
                DisplayMemberPath="Name" SelectedValuePath="SupplierId" />

            <Button Content="Módosítás" Grid.Row="4" Style="{StaticResource CommonButtonStyle}"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Click="SubmitButton_Click" Width="100"/>
        </Grid>

    </Grid>
</UserControl>
