<UserControl x:Class="Ol_der.Controls.Products.AddProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Products"
             mc:Ignorable="d" 
             FontSize="17"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Új termék hozzáadása"
               FontSize="22"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Margin="0 0 0 20"/>

        <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label Content="Cikkszám:" Grid.Row="0" Grid.Column="0" 
                    VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0"/>
            <Label Content="Megnevezés:" Grid.Row="1" Grid.Column="0" 
                    VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0"/>
            <Label Content="Beszállító:" Grid.Row="2" Grid.Column="0" 
                    VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0"/>

            <TextBox x:Name="itemNumberTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Width="300" HorizontalAlignment="Left"/>
            <TextBox x:Name="nameTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Width="600" HorizontalAlignment="Left"/>
            <ComboBox x:Name="suppliersComboBox" Grid.Row="2" Grid.Column="1" Margin="5" Width="300"
                    DisplayMemberPath="Name" SelectedValuePath="SupplierId" HorizontalAlignment="Left"/>

        </Grid>
        <Button Content="Hozzáadás" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                    Style="{StaticResource CommonButtonStyle}" Width="100"
                    VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Click="SubmitButton_Click" IsDefault="True" Margin="10"/>

    </Grid>

</UserControl>
