<UserControl x:Class="Ol_der.Controls.Customers.AddOrModifyCustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Customers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0 20 0 0">
            <TextBlock Text="Új ügyfél hozzáadása"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Név:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Width="600"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Cím:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Width="600"
                     Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Telefon:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Width="600"
                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Width="600"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Adószám:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Width="600"
                     Text="{Binding TaxNumber, UpdateSourceTrigger=PropertyChanged}" />

            <Label Content="Megjegyzés:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top"/>
            <TextBox Grid.Row="5" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch" Width="600" Height="80"
                     Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True"/>


            <Button Content="Hozzáadás" Grid.Row="7" Grid.Column="1" Style="{StaticResource CommonButtonStyle}"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"
                    Command="{Binding AddCommand}" />
        </Grid>
    </Grid>
</UserControl>

