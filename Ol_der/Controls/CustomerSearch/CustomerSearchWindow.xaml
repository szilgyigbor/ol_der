<Window x:Class="Ol_der.Controls.CustomerSearch.CustomerSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ol_der.Controls.CustomerSearch"
        mc:Ignorable="d"
        FontSize="16"
        Title="CustomerSearchWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#f7f7f7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Részletes keresés:" Margin="5" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="22"/>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Left">
            <Label Padding = "10 0 10 0" Content="Ügyfélnév:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5" Width="160">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SearchCustomersByNameCommand}" Key="Enter" />
                </TextBox.InputBindings>
            </TextBox>

            <Button Content="Keresés" Style="{StaticResource CommonButtonStyle}" Command="{Binding SearchCustomersByNameCommand}"/>
        </WrapPanel>

        <WrapPanel Grid.Row="2" Margin="5" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Kiválaszt" Style="{StaticResource CommonButtonStyle}" Click="FinishSelectionClick"/>
        </WrapPanel>

        <ListView ItemsSource="{Binding Customers}" Grid.Row="3" Margin="10"
                  SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                  MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    
                    <GridViewColumn Header="Ügyfélnév" DisplayMemberBinding="{Binding Name}" Width="650" />
                    <GridViewColumn Header="Cím" DisplayMemberBinding="{Binding Adress}" Width="140" />
                    <GridViewColumn Header="Telefonszám" DisplayMemberBinding="{Binding Phone}" Width="140" />
                    <GridViewColumn Header="Emailcím" DisplayMemberBinding="{Binding Email}" Width="140" />
                    <GridViewColumn Header="Adószám" DisplayMemberBinding="{Binding TaxNumber}" Width="140" />
                    <GridViewColumn Header="Megjegyzés" DisplayMemberBinding="{Binding Notes}" Width="140" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="#f7f7f7" />
                    <Setter Property="Foreground" Value="Black" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
