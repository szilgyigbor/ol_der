<Window x:Class="Ol_der.Controls.Sales.SearchDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ol_der.Controls.Sales"
        mc:Ignorable="d"
        FontSize="18"
        Title="SearchWindow" Height="400" Width="500">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="Mire keresünk?" Margin="5 10 5 0" FontSize="22" HorizontalAlignment="Center"/>
        <TextBlock Text="(lehet kombinálni is)" Margin="0" FontSize="13" HorizontalAlignment="Center"/>
        <TextBlock Text="Cikkszám:" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="ProductNumberInput" Margin="0,5" Width="200"/>
        <TextBlock Text="Vásárló neve:" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="CustomerNameInput" Margin="0,5" Width="200"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="OK" Padding="10,5,10,5" Style="{StaticResource CommonButtonStyle}" 
                    Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Mégsem" Padding="10,5,10,5" Style="{StaticResource RedButtonStyle}"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
