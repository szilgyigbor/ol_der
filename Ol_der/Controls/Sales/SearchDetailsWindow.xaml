<Window x:Class="Ol_der.Controls.Sales.SearchDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ol_der.Controls.Sales"
        mc:Ignorable="d"
        FontSize="20"
        Title="SearchWindow" Height="250" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Melyik termék cikkszámát keressük:" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="ProductNumberInput" Margin="0,5" Width="200"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="OK" Padding="10,5,10,5" FontSize="16" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Mégsem" Padding="10,5,10,5" FontSize="16" Click="CancelButton_Click" Margin="5,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
