<Window x:Class="Ol_der.Controls.Sales.InputSaleNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ol_der.Controls.Sales"
        mc:Ignorable="d"
        FontSize="20"
        Title="InputSaleNumberWindow" Height="250" Width="400">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/CommonButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="Megjelenített eladások száma:" Margin="10" HorizontalAlignment="Center"/>
        <TextBox x:Name="NumberInput" Margin="0,5" Width="100"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="OK" Style="{StaticResource CommonButtonStyle}" Padding="10,5,10,5" FontSize="16" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Mégsem" Style="{StaticResource RedButtonStyle}" Padding="10,5,10,5" FontSize="16" Click="CancelButton_Click" IsCancel="True" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
