<UserControl x:Class="Ol_der.Controls.Sales.ShowAllSaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Sales"
             mc:Ignorable="d" 
             FontSize="20"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:DateToDayConverter x:Key="DateToDayConverter"/>
        <local:IsOrderedToTextConverter x:Key="IsOrderedToTextConverter"/>
    </UserControl.Resources>
    <Grid>
        <ListView x:Name="SalesListView" ItemsSource="{Binding GroupedSales.View}">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Margin" Value="20 30 50 30"/>
                        </Style>
                    </GroupStyle.ContainerStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource DateToDayConverter}}" FontWeight="DemiBold" FontSize="22"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="15">
                        <WrapPanel>
                            <TextBlock Text="{Binding Date, StringFormat='HH:mm'}" FontSize="22" FontStyle="Italic" Margin="15"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:F0}'}"  FontSize="26" FontStyle="Italic" Margin="15 15 0 15"/>
                            <TextBlock Text=".-Ft." FontSize="26" FontStyle="Italic" Margin="0 15 15 15"/>
                            <TextBlock FontSize="26" FontStyle="Italic" Margin="15">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding PaymentType}" />
                                        <Style.Triggers>
                                            
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding PaymentType}" Value="Card"/>
                                                    <Condition Binding="{Binding IsCardTransactionProcessed}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Text" Value="{Binding PaymentType, StringFormat='{}{0} (nem könyvelt)'}"/>
                                            </MultiDataTrigger>

                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding PaymentType}" Value="Card"/>
                                                    <Condition Binding="{Binding IsCardTransactionProcessed}" Value="True"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Text" Value="{Binding PaymentType, StringFormat='{}{0} (könyvelt)'}"/>
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding CustomerName}"  FontSize="24" FontStyle="Italic" Margin="15"/>
                            <TextBlock Text="{Binding Notes}"  FontSize="22" FontStyle="Italic" Margin="15"/>
                            
                        </WrapPanel>
                        <ItemsControl ItemsSource="{Binding SaleItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <WrapPanel Margin="5">
                                        <TextBlock Text="{Binding Quantity}" Margin="10 0 0 0"/>
                                        <TextBlock Text=" db" Width="40" Margin="2 0 0 0"/>
                                        <TextBlock Text="{Binding Product.ItemNumber}" Margin="10 0 0 0"/>
                                        <TextBlock Text="{Binding Product.Name}" Margin="15 0 0 0"/>
                                        <TextBlock Text="Eladási ár(/db):" Width="140" Margin="20 0 0 0"/>
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:F0}'}" Margin="5,0,0,0"/>
                                        <TextBlock Text="{Binding IsOrdered, Converter={StaticResource IsOrderedToTextConverter}}" Margin="15 0 0 0"/>
                                    </WrapPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="#F4F4F4"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding PaymentType}" Value="Card">
                            <Setter Property="Background" Value="#E6E0F8"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

    </Grid>
</UserControl>
