<UserControl x:Class="Ol_der.Controls.Sales.ShowAllSaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Sales"
             mc:Ignorable="d" 
             FontSize="15"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:DateToDayConverter x:Key="DateToDayConverter"/>
        <local:OrderStatusTextConverter x:Key="OrderStatusTextConverter"/>
        <local:OrderStatusIconConverter x:Key="OrderStatusIconConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:EnumToDisplayNameConverter x:Key="EnumToDisplayNameConverter" />
    </UserControl.Resources>

    <Grid Background="#FBFBFB">
        <ListView x:Name="SalesListView"
                  ItemsSource="{Binding GroupedSales.View}" 
                  BorderThickness="0"
                  Background="Transparent"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Margin" Value="0 0 0 20"/>
                        </Style>
                    </GroupStyle.ContainerStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#D6E2EA" Background="#E2E8F0" BorderThickness="1" CornerRadius="8" Padding="12" Margin="2">
                                <DockPanel>
                                    <Button Content="Riport" Background="#3B82F6" Foreground="White" Padding="12 6" BorderThickness="0" Cursor="Hand" 
                                            Click="SaveButton_Click" Margin="0 0 12 0" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding Converter={StaticResource DateToDayConverter}}"
                                               FontWeight="SemiBold" FontSize="19" Foreground="#1F2937" VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FBFBFB" CornerRadius="8" Padding="4" Margin="2" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel>
                            <DockPanel Margin="2">
                                <TextBlock Text="{Binding Date, StringFormat='HH:mm'}" FontSize="14" Margin="0 0 12 0" Width="50" VerticalAlignment="Center" Foreground="#4B5563"/>
                                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:F0}'}" FontSize="17" FontWeight="SemiBold"
                                           Width="90" VerticalAlignment="Center" TextAlignment="Right" Foreground="#222"/>
                                <TextBlock Text=".-Ft" FontSize="16" Margin="0 5" Width="30" VerticalAlignment="Center" Foreground="#4B5563"/>

                                <Border x:Name="PaymentTypeBorder" Margin="2" Padding="2" VerticalAlignment="Center" Background="#f1f1f7" CornerRadius="6">
                                    <TextBlock FontSize="15" FontWeight="Medium" Width="70" Padding="2 4 2 4 " Foreground="#111" TextAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <Binding Path="PaymentType" Converter="{StaticResource EnumToDisplayNameConverter}" />
                                                    </Setter.Value>
                                                </Setter>

                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PaymentType}" Value="Card"/>
                                                            <Condition Binding="{Binding IsCardTransactionProcessed}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <Binding Path="PaymentType"
                                                                         Converter="{StaticResource EnumToDisplayNameConverter}"
                                                                         StringFormat="{}{0}(✗)"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PaymentType}" Value="Card"/>
                                                            <Condition Binding="{Binding IsCardTransactionProcessed}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text">
                                                            <Setter.Value>
                                                                <Binding Path="PaymentType"
                                                                         Converter="{StaticResource EnumToDisplayNameConverter}"
                                                                         StringFormat="{}{0}(✓)"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter Property="Background" Value="#ACE698"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <Border Background="#ECF3F6" CornerRadius="6" Padding="4" Margin="4" 
                                        Visibility="{Binding Customer, Converter={StaticResource StringToVisibilityConverter}}"
                                        BorderBrush="#D1D5DB" BorderThickness="1" Width="auto">
                                    <TextBlock Text="{Binding Customer.Name}"
                                               Foreground="#222" FontSize="15"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center" TextAlignment="Left"/>
                                </Border>

                                <Border Background="#F0F9F9" CornerRadius="6" Padding="4" Margin="4" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Visibility="{Binding CustomerName, Converter={StaticResource StringToVisibilityConverter}}" Width="auto">
                                    <TextBlock Text="{Binding CustomerName}" Foreground="#222" FontSize="15" VerticalAlignment="Center" TextAlignment="Left"/>
                                </Border>

                                <TextBlock Text="{Binding Notes}" FontSize="15" FontStyle="Normal" Margin="12 0" Foreground="#333" VerticalAlignment="Center" TextAlignment="Left"/>
                            </DockPanel>

                            <ItemsControl ItemsSource="{Binding SaleItems}" Margin="0 2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9F9F9" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="6" Margin="0 0">
                                            <WrapPanel Margin="6">
                                                <TextBlock Text="{Binding Quantity}" Width="30" FontWeight="SemiBold" Foreground="#222" TextAlignment="Center"/>
                                                <TextBlock Text=" db" Width="40" Foreground="#1F2937"/>
                                                <TextBlock Text="{Binding Product.ItemNumber}" Width="130" Foreground="#222"/>
                                                <TextBlock Text="{Binding Product.Name}" Width="600" TextTrimming="CharacterEllipsis" Foreground="#222"/>
                                                <TextBlock Text="Eladási ár(/db):" Width="120" Foreground="#333"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:F0}'}" Width="70" Foreground="#016632"/>
                                                <StackPanel Orientation="Horizontal" Width="220">
                                                    <Image Source="{Binding Converter={StaticResource OrderStatusIconConverter}}"
                                                           Width="18" Height="18" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Converter={StaticResource OrderStatusTextConverter}}"
                                                               FontStyle="Italic" Foreground="#444"/>
                                                </StackPanel>
                                            </WrapPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</UserControl>