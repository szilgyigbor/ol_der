<UserControl x:Class="Ol_der.Controls.Sales.ShowAllSaleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Sales"
             mc:Ignorable="d" 
             FontSize="16"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:DateToDayConverter x:Key="DateToDayConverter"/>
        <local:OrderStatusConverter x:Key="OrderStatusConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <ListView x:Name="SalesListView" ItemsSource="{Binding GroupedSales.View}">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Margin" Value="5 10 5 15"/>
                        </Style>
                    </GroupStyle.ContainerStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#85a6b1" BorderThickness="4">
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Riport" Background="BlanchedAlmond" Click="SaveButton_Click" Margin="0"/>
                                    <TextBlock Padding="3" Background="#bae2be" Text="{Binding Converter={StaticResource DateToDayConverter}}" FontWeight="SemiBold" FontSize="21" Width="1564"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="2">
                        <StackPanel Margin="0" Width="1600">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Background="#f5f5f5" Height="40">
                                <TextBlock Text="{Binding Date, StringFormat='HH:mm'}" HorizontalAlignment="Left" FontSize="16" Margin="10 0 0 0" Width="50" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:F0}'}" FontSize="18" FontWeight="DemiBold"
                                           Width="90" VerticalAlignment="Center" TextAlignment="Right"/>
                                <TextBlock Text=".-Ft." FontSize="18" Margin="0 5" Width="30" VerticalAlignment="Center"/>

                                <Border x:Name="PaymentTypeBorder" Margin="5" Padding="3" VerticalAlignment="Center">
                                    <TextBlock FontSize="18" VerticalAlignment="Center" FontWeight="SemiBold" Width="75" Padding="2" TextAlignment="Left">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding PaymentType}" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PaymentType}" Value="Card"/>
                                                            <Condition Binding="{Binding IsCardTransactionProcessed}" Value="False"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="{Binding PaymentType, StringFormat='{}{0} (✗)'}"/>
                                                        <Setter Property="Background" Value="#FFB6C1"/>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding PaymentType}" Value="Card"/>
                                                            <Condition Binding="{Binding IsCardTransactionProcessed}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Text" Value="{Binding PaymentType, StringFormat='{}{0} (✓)'}"/>
                                                        <Setter Property="Background" Value="#D8BFD8"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <Border BorderBrush="DarkGray"
                                        BorderThickness="1"
                                        CornerRadius="3"
                                        Padding="5 0 5 0"
                                        Margin="2"
                                        Visibility="{Binding CustomerName, Converter={StaticResource StringToVisibilityConverter}}">
                                    <TextBlock Text="{Binding CustomerName}"
                                       FontSize="17"
                                       VerticalAlignment="Center"
                                       TextAlignment="Left"/>
                                </Border>

                                <TextBlock Text="{Binding Notes}" FontSize="17" FontStyle="Italic" Margin="2" VerticalAlignment="Center" TextAlignment="Left"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding SaleItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#dfdfdf" BorderThickness="2">
                                            <WrapPanel Margin="3">
                                                <TextBlock Text="{Binding Quantity}" Width="30"/>
                                                <TextBlock Text=" db" Width="40"/>
                                                <TextBlock Text="{Binding Product.ItemNumber}" Width="140"/>
                                                <TextBlock Text="{Binding Product.Name}"  Width="700"/>
                                                <TextBlock Text="Eladási ár(/db):" Width="110"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:F0}'}" Width="80"/>
                                                <TextBlock Text="{Binding Converter={StaticResource OrderStatusConverter}}" Width="200"/>
                                            </WrapPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>


                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="#fcfcfc"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
    </Grid>
</UserControl>
