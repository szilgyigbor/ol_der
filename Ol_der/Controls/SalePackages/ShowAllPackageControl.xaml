<UserControl x:Class="Ol_der.Controls.SalePackages.ShowAllPackageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ol_der.Controls.SalePackages"
             xmlns:converters="clr-namespace:Ol_der.Controls.Sales"
             mc:Ignorable="d"
             FontSize="15"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:DateToDayConverter x:Key="DateToDayConverter"/>
        <converters:OrderStatusTextConverter x:Key="OrderStatusTextConverter"/>
        <converters:OrderStatusIconConverter x:Key="OrderStatusIconConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#F5F7FA">
        <ListView x:Name="SalesListView"
                  ItemsSource="{Binding GroupedSales.View}"
                  BorderThickness="0"
                  Background="Transparent"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Margin" Value="0 0 0 20"/>
                        </Style>
                    </GroupStyle.ContainerStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#D6E2EA"
                                    Background="#FFFFFF"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="2">
                                <DockPanel>
                                    <Button Content="Riport"
                                            Background="#3B82F6"
                                            Foreground="White"
                                            Padding="12 6"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="SaveButton_Click" Margin="0 0 12 0" FontWeight="Medium"/>
                                    <TextBlock Text="{Binding Converter={StaticResource DateToDayConverter}}"
                                               FontWeight="SemiBold"
                                               FontSize="18"
                                               Foreground="#1F2937"
                                               VerticalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="White"
                            Margin="2"
                            Padding="4">
                        <StackPanel>
                            <DockPanel Margin="2">
                                <TextBlock Text="{Binding Date, StringFormat='HH:mm'}"
                                           FontSize="14"
                                           Foreground="#4B5563"
                                           Margin="0 0 12 0"
                                           Width="50"
                                           VerticalAlignment="Center"/>

                                <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:F0}'}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Width="90"
                                           Foreground="#222"
                                           VerticalAlignment="Center"
                                           TextAlignment="Right"/>

                                <TextBlock Text=".-Ft."
                                           FontSize="16"
                                           Foreground="#4B5563"
                                           Margin="0 5"
                                           VerticalAlignment="Center"/>

                                <Border Background="#F9FAFB" CornerRadius="6" Padding="4" Margin="4" 
                                        BorderBrush="#D1D5DB" BorderThickness="1" Width="auto"
                                        Visibility="{Binding Customer, Converter={StaticResource StringToVisibilityConverter}}">
                                    <TextBlock Text="{Binding Customer.Name}" 
                                               Foreground="#222" FontSize="15" FontWeight="Medium"
                                               VerticalAlignment="Center" TextAlignment="Left"/>
                                </Border>

                                <Border Background="#FFFF" CornerRadius="6" Padding="4" Margin="4" BorderBrush="#D1D5DB" BorderThickness="1"
                                        Visibility="{Binding CustomerName, Converter={StaticResource StringToVisibilityConverter}}" Width="auto">
                                    <TextBlock Text="{Binding CustomerName}" Foreground="#1F2937" FontSize="15" VerticalAlignment="Center" TextAlignment="Left"/>
                                </Border>

                                <TextBlock Text="{Binding Notes}"
                                           FontSize="15"
                                           FontStyle="Normal"
                                           Foreground="#333"
                                           Margin="12 0"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           DockPanel.Dock="Right"/>
                            </DockPanel>

                            <ItemsControl ItemsSource="{Binding SaleItems}" Margin="0 2">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E5E7EB"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Margin="0 0"
                                                Background="#FFFFFF">
                                            <WrapPanel Margin="6">
                                                <TextBlock Text="{Binding Quantity}"
                                                           Width="30"
                                                           FontWeight="SemiBold"
                                                           Foreground="#1F2937"/>
                                                <TextBlock Text=" db"
                                                           Width="40"
                                                           Foreground="#4B5563"/>
                                                <TextBlock Text="{Binding Product.ItemNumber}"
                                                           Width="130"
                                                           Foreground="#333"/>
                                                <TextBlock Text="{Binding Product.Name}"
                                                           Width="600"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="#1F2937"/>
                                                <TextBlock Text="Eladási ár(/db):"
                                                           Width="120"
                                                           Foreground="#4B5563"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:F0}'}"
                                                           Width="70"
                                                           Foreground="#047857"/>
                                                <StackPanel Orientation="Horizontal" Width="220">
                                                    <Image Source="{Binding Converter={StaticResource OrderStatusIconConverter}}"
                                                           Width="18" Height="18" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Converter={StaticResource OrderStatusTextConverter}}"
                                                           FontStyle="Italic" Foreground="#6B7280"/>
                                                </StackPanel>
                                            </WrapPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#1F2937"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>
    </Grid>
</UserControl>