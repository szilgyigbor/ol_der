<Window x:Class="Ol_der.Controls.Orders.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ol_der.Controls.Orders"
        mc:Ignorable="d"
        FontSize="20"
        Title="MessageBoxWindow" Height="200" Width="800">
    <StackPanel Margin="10">
        <TextBlock x:Name="messageToShow" Text="Message" Margin="10" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="OK" Padding="10,5,10,5" FontSize="16" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Mégsem" Padding="10,5,10,5" FontSize="16" Click="CancelButton_Click" IsCancel="True" Margin="5,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
