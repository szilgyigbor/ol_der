<UserControl x:Class="Ol_der.Controls.Orders.OrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ol_der.Controls.Orders"
             mc:Ignorable="d" 
             d:DesignHeight="1450" d:DesignWidth="1920">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/SubMenuButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="#B3C9E1">
            <TextBlock Text="Rendelések kezelése"
               FontSize="28"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        </Grid>


        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="9.3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" Width="120">
                <Button Content="Megjelenített" Style="{StaticResource SubMenuButtonStyle}" Click="ShowAllOrder_Click"/>
                <Button Content="Keresés" Style="{StaticResource SubMenuButtonStyle}" Click="ShowFilteredOrders_Click"/>
                <Button Content="Részletek" Style="{StaticResource SubMenuButtonStyle}" Click="ShowOrderDetails_Click"/>
                <Button Content="Új rendelés" Style="{StaticResource SubMenuButtonStyle}" Click="AddOrder_Click"/>
                <Button Content="Módosítás" Style="{StaticResource SubMenuButtonStyle}" Click="ModifyOrder_Click"/>
                <Button Content="Zöldítés" Style="{StaticResource SubMenuButtonStyle}" Click="GreenifyOrder_Click"/>
                <Button Content="Törlés" Style="{StaticResource RedButtonStyle}" Click="btnDeleteOrder_Click"/>
            </StackPanel>

            <GridSplitter Grid.Column="0" Width="3" HorizontalAlignment="Right"
            Background="Black" VerticalAlignment="Stretch"/>

            <ContentControl Grid.Column="1" VerticalAlignment="Top" Margin="5" x:Name="ContentArea"/>
        </Grid>
    </Grid>
</UserControl>
